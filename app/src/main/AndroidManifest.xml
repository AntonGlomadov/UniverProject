<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="ru.glomadov.univerproject">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.UniverProject">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".profile.AboutActivity"
                android:label="@string/aboutLabel"
                android:parentActivityName=".profile.ProfileActivity"/>

        <activity
                android:name=".profile.SettingsActivity"
                android:label="@string/settingsLabel"
                android:parentActivityName=".profile.ProfileActivity"/>

        <activity
                android:name=".profile.ProfileActivity"
                android:theme="@style/Theme.UniverProject.NoActionBar"/>
    </application>

</manifest>